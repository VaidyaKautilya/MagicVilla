@model IEnumerable<MagicVilla_web.Models.Dto.Villa.VillaDTO>
@{
    ViewData["Title"] = "IndexVilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a 
                asp-controller="Villa" 
                asp-action="Create"  
                class="btn btn-outline-primary">
                <i class="bi bi-plus-square-fill"></i> Create New Villa</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <table class="table table-primary">
                    <thead>
                        <tr>
                            <th>Sr. No</th>
                            <th>Name</th>
                            <th>Details</th>
                            <th>Occupy</th>
                            <th>Rate</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{var counter = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@item.Name</td>
                                <td>@item.Details</td>
                                <td>@item.Occupation</td>
                                <td>@((item.Rate).ToString("c"))</td>
                                <td>
                                    <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@item.Id"  class="btn btn-outline-warning"><i class="bi bi-pencil"></i> Update</a>
                                    <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@item.Id"  class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


