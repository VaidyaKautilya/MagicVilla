@model MagicVilla_web.Models.Dto.Villa.VillaUpdateDTO

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update @Model.Name</h1>


<div class="container">
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input hidden asp-for="Id"/>
         <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Details">Details:</label>
            <textarea asp-for="Details" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rate">Rate:</label>
            <input asp-for="Rate" class="form-control" type="number" step="0.01" required>
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SqFt">SqFt:</label>
            <input asp-for="SqFt" class="form-control" type="number" required>
            <span asp-validation-for="SqFt" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Occupation">Occupation:</label>
            <input asp-for="Occupation" class="form-control" type="number" required>
            <span asp-validation-for="Occupation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Image URL:</label>
            <input asp-for="ImageUrl" class="form-control" type="url" required>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Aminity">Amenity:</label>
            <input asp-for="Aminity" class="form-control" required>
            <span asp-validation-for="Aminity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-primary mt-3">Update</button>
         <a asp-controller="Villa" asp-action="IndexVilla"  class="btn btn-outline-info mt-3"><i class="bi bi-arrow-left-circle-fill"></i> Back to List</a>
    </form>
</div>
