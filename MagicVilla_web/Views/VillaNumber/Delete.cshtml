@model MagicVilla_web.Models.VM.VillaNumberDeleteVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<div class="container">
    <h2>Delete</h2>
    <form asp-action="Delete" method="post" enctype="multipart/form-data">
        <input hidden asp-for ="VillaNumber.VillaNo"/>
        <div class="row">
          
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="VillaNumber.VillaNo">Villa No:</label>
                    <input asp-for="VillaNumber.VillaNo" class="form-control" disabled>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="VillaNumber.VillaId">Villa Name:</label>
                    <select asp-for="VillaNumber.VillaId" class="form-control" asp-items="@Model.VillaList">
                        <options disabled>--select --</options>
                    </select>
                </div>
            </div>
            <div class="col-md-12">
                     <div class="form-group">
            <label asp-for="VillaNumber.SpecialDetails">Details:</label>
            <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rows="4" readonly></textarea>
        </div>
            </div>
            <div class="col-md-12">
                <button type="submit" value ="Delete" class="btn btn-outline-danger mt-3">Delete</button>
         <a asp-controller="VillaNumber" asp-action="IndexVillaNumber"  class="btn btn-outline-info mt-3"><i class="bi bi-arrow-left-circle-fill"></i> Back to List</a>
            </div>
        </div>
    </form>
</div>