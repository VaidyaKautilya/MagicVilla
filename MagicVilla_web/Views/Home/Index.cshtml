@using Microsoft.AspNetCore.Components
@model IEnumerable<MagicVilla_web.Models.Dto.Villa.VillaDTO>
@{
    ViewData["Title"] = "Home Page";
}

<img class="d-block w-100" src="images/Home/Villa_1.jpeg" alt=""/>

<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach (var item in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row" style="border-radius:20px; border: 2px solid #ffffff">
                <div class="col-4">
                    <img class="d-block w-100" style="border-radius:20px;" src="@item.ImageUrl" alt="first slide">
                </div>                
                <div class="col-8">
                    <p class="card-title text-warning" style="font-size:xx-large">@item.Name</p>
                    <p class="card-text">
                        @((MarkupString)item.Details)
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                            <div class="col-4">
                                <a href="" class="btn btn-success form-control btn-block">Book</a>
                            </div>
                            <div class="col-4">
                                <span class="">Max Occupancy : @item.Occupation adults</span>
                                <span class="pt-1">Villa Size: @item.SqFt qft</span>
                            </div>

                            <div class="col-4">
                                <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px">
                                    USD 
                                    <span style="border-bottom:1px solid #ff6a00">
                                        @item.Rate.ToString("c")
                                    </span>
                                </span>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>